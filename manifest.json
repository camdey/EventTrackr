{
    "name": "Event Listener",
    "version": "1.0",
    "description": "Checks for Tracking Messages",
    "background": {
    	"scripts": ["background.js"]
  	},

  	"page_action": {
  		"default_popup": "popup.html",
		"default_icon": {
        	"16": "icon_16.png",
        	"32": "icon_32.png",
        	"48": "icon_48.png"
      	}
  	},

  	"icons": {
    	"16": "icon_16.png",
    	"32": "icon_32.png",
    	"48": "icon_48.png",
    	"128": "icon_128.png"
  	},

	"permissions": [
	  "webRequest",
	  "storage",
	  "declarativeContent",
	  "*://my.izettle.com/dachshund",
	  "*://bo-tracking.izettle.com/track"
	],
	"web_accessible_resources": [
   		"amplitude_16.png"
 	],

	"manifest_version": 2
}
